# Backend Environment Variables for Voice Coach Feature

# Server Configuration
PORT=5000

# Database
DATABASE_PATH=database.sqlite

# CORS Configuration
FRONTEND_URL=http://localhost:3001

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Deepgram Configuration (for Voice Coach)
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_VOICE_ID=aura-asteria-en

# Voice Coach Settings
VOICE_SESSION_TIMEOUT=1800000  # 30 minutes in milliseconds
TTS_CACHE_TTL=604800000        # 7 days in milliseconds
MAX_AUDIO_CHUNK_SIZE=8192      # 8KB chunks for WebSocket

# Security (optional - for future authentication)
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Environment
NODE_ENV=development
